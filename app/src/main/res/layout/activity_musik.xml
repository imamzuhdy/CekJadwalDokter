<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUtama.Musik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/noteText"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:textAlignment="viewStart"
                    android:maxLines="10"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playDo">

                <ImageView
                    android:id="@+id/icDo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Do"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playRe">

                <ImageView
                    android:id="@+id/icRe"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Re"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playMi">

                <ImageView
                    android:id="@+id/icMi"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Mi"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playFa">

                <ImageView
                    android:id="@+id/icFa"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Fa"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playSo">

                <ImageView
                    android:id="@+id/icSo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="So"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playLa">

                <ImageView
                    android:id="@+id/icLa"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="La"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playSi">

                <ImageView
                    android:id="@+id/icSi"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Si"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="playDoo">

                <ImageView
                    android:id="@+id/icDoo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/rs_a_dadi_tjokrodipo" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Do'"
                    android:textAlignment="center"
                    android:textSize="20pt" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>