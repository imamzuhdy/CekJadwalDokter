<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUtama.Drawer"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0DBFAC"
        android:measureWithLargestChild="false"
        android:paddingTop="1pt"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginBottom="5pt"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5pt"
                android:padding="5pt"
                app:cardCornerRadius="5pt">

                <ViewFlipper
                    android:id="@+id/v_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="90pt"
                    android:layout_centerVertical="true"></ViewFlipper>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        app:cardCornerRadius="5pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:onClick="KlikBumiWaras"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center"
                                android:paddingBottom="20pt"
                                android:src="@mipmap/rs_bumi_waras" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:text="RS. Bumi Waras"
                            android:layout_marginBottom="5pt"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        app:cardCornerRadius="5pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:onClick="advent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageview1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingTop="7pt"
                                android:paddingBottom="10pt"
                                android:layout_marginBottom="5pt"
                                android:src="@mipmap/rs_advent" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:layout_marginBottom="5pt"
                            android:text="RS. Advent"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        app:cardCornerRadius="5pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:layout_margin="0pt"
                            android:orientation="vertical"
                            android:onClick="KlikDKT">

                            <ImageView
                                android:id="@+id/imageview2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingTop="5pt"
                                android:paddingBottom="20pt"
                                android:src="@mipmap/rs_dkt" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:layout_marginBottom="5pt"
                            android:text="RS. DKT"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        android:onClick="musik"
                        app:cardCornerRadius="5pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:layout_margin="0pt"
                            android:onClick="KlikImanuel"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageview3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingTop="5pt"
                                android:paddingBottom="20pt"
                                android:src="@mipmap/rs_imanuel" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:layout_marginBottom="5pt"
                            android:text="RS. Imanuel Way Halim"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        app:cardCornerRadius="5pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:layout_margin="0pt"
                            android:onClick="KlikMoeloek"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageview4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingTop="5pt"
                                android:paddingBottom="10pt"
                                android:layout_marginBottom="5pt"
                                android:src="@mipmap/rs_abdul_moeloek" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:layout_marginBottom="5pt"
                            android:text="RS. Abdoel Moeloek"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50pt"
                        android:layout_margin="2pt"
                        android:onClick="musik"
                        app:cardCornerRadius="5pt">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50pt"
                            android:layout_margin="0pt"
                            android:layout_marginBottom="0pt"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageview5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingTop="5pt"
                                android:paddingBottom="15pt"
                                android:src="@drawable/musik" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:layout_marginBottom="5pt"
                            android:text="Musik"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi"/>
</android.support.v4.widget.DrawerLayout>