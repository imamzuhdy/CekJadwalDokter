<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0DBFAC"
        android:measureWithLargestChild="false"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp">

                <ViewFlipper
                    android:id="@+id/v_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_centerVertical="true"></ViewFlipper>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0DBFAC"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFF"
                            android:padding="20dp"
                            android:onClick="KlikDadi">

                            <ImageView
                                android:id="@+id/imageview"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/rs_a_dadi_tjokrodipo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview"
                                android:text="RS. A. Dadi Tjokrodipo"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFF"
                            android:onClick="advent"
                            android:padding="20dp">

                            <ImageView
                                android:id="@+id/imageview1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/rs_advent" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview1"
                                android:text="RS. Advent"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="#FFF"
                            android:padding="20dp"
                            android:onClick="KlikDKT">

                            <ImageView
                                android:id="@+id/imageview2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/logo_rs_dkt" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview2"
                                android:text="RS. DKT"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="musik"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="#FFF"
                            android:padding="20dp"
                            android:onClick="KlikImanuel">

                            <ImageView
                                android:id="@+id/imageview3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/rs_imanuel" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview3"
                                android:text="RS. Imanuel Way Halim"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="#FFF"
                            android:padding="20dp"
                            android:onClick="KlikMoeloek">

                            <ImageView
                                android:id="@+id/imageview4"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/rs_abdul_moeloek" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview4"
                                android:text="RS. Abdul Moeloek"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="musik"
                        app:cardCornerRadius="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="#FFF"
                            android:padding="20dp">

                            <ImageView
                                android:id="@+id/imageview5"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/musik" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageview5"
                                android:text="Musik"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />
</android.support.v4.widget.DrawerLayout>