<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:cardCornerRadius="2pt"
    android:layout_marginTop="3pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">

        <ImageView
            android:id="@+id/fotoDokter"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:src="@drawable/icon_profile"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45pt"
            android:paddingLeft="3pt"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3pt"
                    android:paddingBottom="3pt"
                    android:text="Nama : "
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/namaDokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Dokter"
                    android:layout_toRightOf="@+id/nama"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingBottom="3pt"
                    android:paddingTop="3pt"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3pt"
                    android:text="Hari    : "
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/idHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/hari"
                    android:textColor="#000"
                    android:text="Hari"
                    android:textStyle="bold"
                    android:paddingBottom="3pt"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3pt"
                    android:text="Jam    : "
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/idJam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/jam"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Jam"
                    android:paddingBottom="3pt"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>