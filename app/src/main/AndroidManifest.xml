<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.project.cekjadwaldokter">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon_splash"
        android:label="Cek Jadwal Dokter"
        android:roundIcon="@drawable/icon_splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuUtama.Drawer" />
        <activity android:name=".DaftarDokterSpesialis.ListDokterSpesialis"
            android:label="Daftar Spesialis"/>
        <activity android:name=".InfoDokter.NamaDokter" />
        <activity
            android:name=".MenuUtama.Musik"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity android:name=".CustomeList.ListSpesialis"></activity>
    </application>

</manifest>